{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": [
        "../tests/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots" : ["./src/types", "./node_modules/@types"],
    "experimentalDecorators": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [],
}
